<?php

//Chinh duong dan tai day
$filePath = "/etc/squid/allowpage";

$fp=fopen($filePath,"r")or exit("khong tim thay file can mo");
$data = file_get_contents($filePath, true);

//Save file
if (isset($_POST['file'])) {
    $fp=fopen($filePath,"a")or exit("khong tim thay file can mo");

    $news = $_POST['file'];
    file_put_contents($filePath, $news);
    fclose($fp);

    header('Location: index.php');
}

//Run Script
if (
        !isset($_POST['file']) && (
        isset($_GET['run_script']) && $_GET['run_script']
    )
) {
    $result = shell_exec('ifconfig');
}

?>

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
    <div class="container" style="padding-top: 50px">
        <form action="index.php" method="POST" accept-charset="utf-8">
            <div class="form-group">
                <textarea id="file" name="file" rows="5" cols="50"><?= $data ?></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="index.php?run_script=1" title="" class="btn btn-danger">Run script</a>
        </form>

        <?php if ($result) { ?>
        <br>
        <pre>
            <?= $result; ?>
        </pre>
        <?php } ?>
    </div>
</body>

</html>
